<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <RelativeLayout
                android:id="@+id/relativeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/relativeLayout"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name - "
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    app:layout_constraintLeft_toLeftOf="parent">

                </TextView>

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/name"
                    android:text="Savej khan"
                    android:textColor="#2B2828"
                    android:textSize="16dp">

                </TextView>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayoutMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/relativeName"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile No. - "
                    android:textColor="@android:color/black"
                    android:textSize="18dp">

                </TextView>

                <TextView
                    android:id="@+id/txtMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/mobile"
                    android:gravity="bottom"
                    android:text="9090099090"
                    android:textColor="#2B2828"
                    android:textSize="16dp">

                </TextView>

                <ImageView
                    android:id="@+id/imgMob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/call"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/txtMobile">

                </ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/relativeLayoutMobile"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/eltMob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alternate Mobile no. - "
                    android:textColor="@android:color/black"
                    android:textSize="18dp"></TextView>

                <TextView
                    android:id="@+id/txtAltMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/eltMob"
                    android:text="1234567890"
                    android:textColor="#2B2828"
                    android:textSize="16dp">

                </TextView>

                <ImageView
                    android:id="@+id/imgMobAlt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/call"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/txtAltMobile"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address - "
                    android:textColor="@android:color/black"
                    android:textSize="18dp"></TextView>

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/address"
                    android:text="124, Gali No. 8 Bagpat  abcd kjl mjunh polki Road,Meerut"
                    android:textColor="#2B2828"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutdatePickup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayoutAddress"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time and Date - "
                    android:textColor="@android:color/black"
                    android:textSize="18dp"></TextView>

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/time"
                    android:text="24-03-2020"
                    android:textColor="#2B2828"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayoutdatePickup"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/Brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brand - "
                    android:textColor="@android:color/black"
                    android:textSize="18dp"></TextView>

                <TextView

                    android:id="@+id/txtBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/Brand"
                    android:text="Samsung"
                    android:textColor="#2B2828"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txtBrand"
                    android:text="Model - "
                    android:textColor="@android:color/black"
                    android:textSize="18dp"></TextView>

                <TextView
                    android:id="@+id/txtModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/model"
                    android:text="J7"
                    android:textColor="#2B2828"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutGb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayoutBrand"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/gb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GB - "
                    android:textColor="@android:color/black"
                    android:textSize="18dp"></TextView>

                <TextView

                    android:id="@+id/txtgb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/gb"
                    android:text="32"
                    android:textColor="#2B2828"
                    android:textSize="16dp" />


            </RelativeLayout>


            <LinearLayout
                android:id="@+id/relativeLayoutButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayoutGb"
                app:layout_constraintVertical_bias="0.0">

                <Button
                    android:id="@+id/btnConfirm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="Confirm"
                    android:textColor="@android:color/black"></Button>

                <Button
                    android:id="@+id/btnReject"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="Reject"
                    android:textColor="@android:color/black"></Button>

                <Button
                    android:id="@+id/btnLocation"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="Location"
                    android:textColor="@android:color/black"></Button>


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>